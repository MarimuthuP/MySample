<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appBackcolor"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--type layout-->
        <FrameLayout
            android:id="@+id/frame_message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--alert title text-->
                <LinearLayout
                    android:id="@+id/ll_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_alert_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                         />

                    <TextView
                        android:id="@+id/tv_alert_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:padding="@dimen/margin_15"
                        android:text="@string/alert_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_18" />



                </LinearLayout>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1"
                    android:layout_below="@+id/ll_title"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:background="@color/colorPrimary"></View>

                <Space
                    android:id="@+id/spacer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_5"
                    android:layout_below="@+id/view_line" />

                <!--recyclerview Layout-->
                <LinearLayout
                    android:id="@+id/linearlayout_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spacer"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_list"
                        android:layout_width="match_parent"
                        android:scrollbars="vertical"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>


                </LinearLayout>

                <!--Enter Amount Layout-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/lineanlayout_enteramt"
                    android:layout_below="@+id/spacer"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_appcolor"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/margin_25"
                        android:layout_marginTop="1dp"
                        android:padding="@dimen/margin_10"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_5"
                            android:background="@drawable/ic_view_list_black_24dp"
                            android:backgroundTint="@color/dark_blue" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_5"
                            android:layout_weight="2"
                            app:hintTextAppearance="@style/TextLabel_UpdateProfile">

                            <EditText
                                android:id="@+id/edt_custom_amt"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:drawablePadding="@dimen/margin_10"
                                android:drawableTint="@color/dark_blue"
                                android:hint="@string/enter_amount"
                                android:inputType="numberDecimal"
                                android:maxLength="25"
                                android:paddingRight="@dimen/margin_5"
                                android:paddingLeft="@dimen/margin_1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/font_16" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </FrameLayout>

    </RelativeLayout>

    <!--bottom btn layout-->
    <LinearLayout
        android:id="@+id/ll_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_main_layout"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_blue_bg"
            android:gravity="center"
            android:text="@string/ok_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_blue_bg"
            android:gravity="center"
            android:text="@string/cancel_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>